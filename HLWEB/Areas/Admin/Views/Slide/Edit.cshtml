@model Model.EF.Slide

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Cập nhật Slide
}

@using (Html.BeginForm("Edit","Slide",FormMethod.Post,new {entype="multipart/form-data" }))

@model List<Model.EF.Product>
@{
    ViewBag.Title = "ListByCatId";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var category = (Model.EF.ProductCategory)ViewBag.Category;
    var image = (Model.EF.Slide)ViewBag.Image;
    var imageLink = image.image.ToString().Substring(1);
}

<div class="page-heading about-heading header-text" style="background-image: url('@imageLink');">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
            </div>
        </div>
    </div>
</div>
<div class="latest-products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>@category.name</h2>
                </div>
            </div>

            @foreach (var item in Model)
            {
                var url = "/chi-tiet/" + item.metaTitle + "-" + item.id;
                <div class="col-lg-3 col-md-6">
                    <div class="product-item">
                        <a href="@url"><img src="@Url.Content(item.image)" alt=""></a>
                        <div class="down-content">
                            <a href="@url"><h4>@item.name</h4></a>

                            <h6>
                                @if (item.promotionPrice != null)
                                {
                        <del>@(item.price.Value.ToString("N0")+" VND")</del> <strong class="text-primary">  @(item.promotionPrice.Value.ToString("N0")+" VND")</strong> }
                                        else
                                        { @(item.price.HasValue ? item.price.Value.ToString("N0") + " VND" : "Liên hệ: 0348554851");
                    }
                            </h6>

                            <p>@item.Cpu &nbsp;/&nbsp; @item.ram &nbsp;/&nbsp; @item.trongluong &nbsp;</p>

                            <small>
                                <strong title="Ổ cứng"><i class="fa fa-dashboard"></i> @item.ocung</strong> &nbsp;&nbsp;&nbsp;&nbsp;
                                <strong title="Màn hình"><i class="fa fa-cube"></i> @item.manhinh</strong>&nbsp;&nbsp;&nbsp;&nbsp;
                                <strong title="Hệ điều hành"><i class="fa fa-cog"></i> @item.hedieuhanh</strong>
                            </small>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</div>

